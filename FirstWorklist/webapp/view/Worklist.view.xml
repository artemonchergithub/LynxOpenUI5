<mvc:View
	controllerName="zjblessons.FirstWorklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'MaterialText',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingThreshold="15"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="materialIDSearchField"
							tooltip="{i18n>worklistMaterialTextSearchTooltip}"
							placeholder="{i18n>worklistMaterialTextSearchTooltip}"
							search="onFilterMaterialText"
							width="auto">
						</SearchField>
						<SearchField
							id="createdByFullNameSearchField"
							tooltip="{i18n>worklistCreatedByFullNameSearchTooltip}"
							placeholder="{i18n>worklistCreatedByFullNameSearchTooltip}"
							search="onFilterCreatedByFullName"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="materialIDColumn">
						<Text text="{i18n>tableMaterialIDColumnTitle}" id="materialIDTextColumnTitle"/>
					</Column>
					<Column id="materialTextColumn">
						<Text text="{i18n>tableMaterialTextColumnTitle}" id="materialTextColumnTitle"/>
					</Column>
					<Column id="materialDescriptionColumn">
						<Text text="{i18n>tableMaterialDescriptionColumnTitle}" id="materialDescriptionColumnTitle"/>
					</Column>
					<Column id="createdByFullNameColumn">
						<Text text="{i18n>tableCreatedByFullNameColumnTitle}" id="createdByFullNameColumnTitle"/>
					</Column>
					<Column id="createdColumn">
						<Text text="{i18n>tableCreatedColumnTitle}" id="createdColumnTitle"/>
					</Column>
					<Column id="modifiedByFullNameColumn">
						<Text text="{i18n>tableModifiedByFullNameColumnTitle}" id="modifiedByFullNameColumnTitle"/>
					</Column>
					<Column id="modifiedColumn">
						<Text text="{i18n>tableModifiedColumnTitle}" id="modifiedColumnTitle"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<Text
								text="{MaterialID}"/>
							<Text
								text="{MaterialText}"/>
							<Text
								text="{MaterialDescription}"/>
							<Text
								text="{CreatedByFullName}"/>
							<Text
								text="{Created}"/>
							<Text
								text="{ModifiedByFullName}"/>
							<Text text="{
							path: 'Modified', 
							type: 'sap.ui.model.type.Date', 
							formatOptions: {pattern: 'HH:mm dd/MM/yyyy'}
							}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{worklistView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>